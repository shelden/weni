<project name="DataCapture.Workflow"
	 default="all"
	 basedir="."
	 >
    <!-- ================================================================== -->
    <property environment="env" />
    <property name="msbuild"
	      value="C:\Windows\Microsoft.NET\Framework64\v4.0.30319\msbuild.exe"
	      />
    <!-- ================================================================== -->
    <target name="all" 
	    depends="echo,db.init,build,test"
	    />
    <!-- ================================================================== -->
    <target name="db.init" /> 
    <target name="test" />
    <!-- ================================================================== -->
    <target name="echo">
        <echo message="${env.PATH}" />
    </target>
    <!-- ================================================================== -->
    <target name="build">
        <exec executable="${msbuild}" failonerror="true">
	    <arg value="DataCapture/DataCapture.Workflow.sln" />
	</exec>
    </target>
    <!-- ================================================================== -->
</project>    
